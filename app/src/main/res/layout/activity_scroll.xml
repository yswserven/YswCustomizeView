    </com.yswcustomizeview.mScrollView.MyScrollView>

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#FD5548">
    </RelativeLayout>

</RelativeLayout>
